<Window x:Class="PhotoAlbumWorkflow.RenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rename Files" Height="200" Width="300">
    <Grid>
        <Label Content="Prefix:" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="Starting Number:" Height="28" HorizontalAlignment="Left" Margin="13,46,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="23" Margin="60,18,12,0" Name="prefixTextBox" VerticalAlignment="Top"  />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="120,46,0,0" Name="startingTextBox" VerticalAlignment="Top" Width="47" Text="01" TextAlignment="Right" />
        <Button Content="Cancel" Margin="0,0,12,12" Name="cancelButton" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="cancelButton_Click" />
        <Button Content="Rename" Margin="0,0,93,12" Name="renameButton" HorizontalAlignment="Right" Width="75" Height="23" VerticalAlignment="Bottom" Click="renameButton_Click" />
    </Grid>
</Window>
